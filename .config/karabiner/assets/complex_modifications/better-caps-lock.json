{
	"title": "Caps Lock to Hyper When Held",
	"rules": [
		{
			"description": "Map Caps Lock to Hyper when held",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "caps_lock",
						"modifiers": {
							"optional": ["any"]
						}
					},
					"to": [
						{
							"key_code": "left_shift",
							"modifiers": ["left_command", "left_control", "left_option"]
						}
					]
				}
			]
		},
